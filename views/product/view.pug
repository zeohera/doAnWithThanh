extends ../layouts/common

block content
    
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    .product-detail(style='background-image : url('+backgroundImage+')')
        .container
            link(href='https://css.gg/menu.css' rel='stylesheet')
            .row
                .col-md-10
                    nav
                        ol.breadcrumb
                            li.breadcrumb-item
                                a(href="/product") 
                                    i(class='material-icons') storefront
                            li.breadcrumb-item.active
                                span product
                .col-md-2
                    nav
                        ol.breadcrumb
                            li.breadcrumb-item
                                a(href="/product/category/?name=" + productDetail.category)= productDetail.category
                            li.breadcrumb-item
                                a(href="/product/category/?name=" + productDetail.category+ "&subCategory=" + productDetail.subCategory)= productDetail.subCategory
                
            .row.product-info
                .col-md-5 
                    img(src=productDetail.image, alt="", style ='max-width: 80vw')
                .col-md-7
                    h1= productDetail.name
                    p thương hiệu 
                        a(href="/product/brandInfo/" + productDetail.brand) 
                            img(src=brandLogo, alt="", style='max-height: 70px')
                    p Số lượng :
                        |
                        = productDetail.amount
                    p= productDetail.introText
                    if (giftList.length > 0)
                        .giftProductList.row
                            h5 Quà tặng kèm
                            each gift in giftList
                                a.col-md-6.row.giftProduct(href="/product/" + gift.giftID) 
                                    .col-md-8
                                        p= gift.giftName
                                    .col-md-4
                                        img(src=gift.giftImage, alt="" , style='height : 70px')


                    if productDetail.sound
                        iframe( style='width : 100%; height : 420px' src=productDetail.sound)
            hr
            .row
                h1 Mô tả chi tiết 
                p= productDetail.description

        .fixed-bottom
            .container
                .row 
                    .col-md-3.hotline
                        h5 Hotline :
                        a(href="tel:+845670934") 
                            Strong  0335670934
                    .col-md-3.price
                        if (productDetail.discountedPrice)
                            p.final-price= productDetail.discountedPrice
                                | VNĐ  
                            p.before-price= productDetail.price
                                | VNĐ
                        else 
                            p.final-price= productDetail.price
                                | VNĐ
                    .col-md-6.add2Cart
                        a(href="/product/addToShoppingCart/" + productDetail.id).btn.btn-primary.btn-lg  Thêm vào giỏ hàng 
