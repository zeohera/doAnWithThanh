extends ../layouts/adminLayout

block content
    .container-fluid
        h1 Product category update
        if errors
            for error in errors
                .alert.alert-danger= error
        form(action="/admin/updateProductCategory/" + category.id, method="post", enctype="multipart/form-data") 
            .mb-3
                label.form-label(for='name') tên
                input#name.form-control(name = 'name' value= category.name)
            .mb-3.row
                .col-md-6
                    label(for="image") image
                    br
                    input(name = "image", type="file" )
                .col-md-6
                    img(src=category.image, alt="", style='max-height: 200px')
            .mb-3
                label.form-label(for='description') Mô tả
                br
                textarea#description.form-control(name="description" ,rows="4", cols="100")= category.description   
            button.btn.btn-primary(type='submit') Xác nhận