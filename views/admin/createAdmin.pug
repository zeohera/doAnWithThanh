extends ../layouts/adminLayout

block content
    .container-fluid
        if errors
            for error in errors
                .alert.alert-danger= error
        form(action = "/admin/createAdmin", method= "POST", enctype="multipart/form-data")
            .mb-3
                label.form-label(for='exampleInputEmail1') Họ và tên
                input#name.form-control(name = 'name')
            .mb-3
                label.form-label(for='exampleInputEmail1') account
                input#account.form-control(name = 'account')
            .mb-3
                label(for="avatar") avatar
                br
                input(name = "avatar", type="file" )
            .mb-3
                label.form-label(for='exampleInputEmail1') Số điện thoai
                input#phoneNumber.form-control(name = 'phoneNumber')
            .mb-3
                label.form-label(for='exampleInputEmail1') Địa chỉ Email
                input#exampleInputEmail1.form-control(type='email', name= 'email' )
            .mb-3
                label.form-label(for='exampleInputPassword1') Mật khẩu
                input#exampleInputPassword1.form-control(type='password', name = 'password')
            .mb-3.form-check
                .form-check
                    input#flexRadioDefault2.form-check-input(type='radio', name='pro', checked='', value = 'Normal')
                    label.form-check-label(for='flexRadioDefault2')
                        | Normal Admin
                .form-check
                    input#flexRadioDefault1.form-check-input(type='radio', name='pro', value = 'Full')
                    label.form-check-label(for='flexRadioDefault1')
                        |  Full Permission Admin
            button.btn.btn-primary(type='submit') Xác nhận
