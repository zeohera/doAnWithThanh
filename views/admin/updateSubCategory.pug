extends ../layouts/adminLayout

block content
    .container-fluid
        h1 Product subcategory update
        if errors
            for error in errors
                .alert.alert-danger= error
        form(action="/admin/updateSubCategory/"+ subCategory.id, method="post") 
            .mb-3
                label.form-label(for='name') tên 
                input#name.form-control(name = 'name', value = subCategory.name)

            .mb-3 
                label.form-label(for='category') Thuộc loại sản phẩm nào
                if productCategories
                    .mb-3
                        select#category.form-select(aria-label='Default select example' name ='mother')
                            option(selected='') Open this select menu
                            for category in productCategories
                                option(value=category.name)= category.name
            .mb-3
                label.form-label(for='description') Mô tả
                br
                textarea#description.form-control(name="description" ,rows="4", cols="100")= subCategory.description
            button.btn.btn-primary(type='submit') Xác nhận